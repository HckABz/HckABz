#!/bin/bash

print( " Here is an example of a function ")

def who_am_i():
        name="Alex"
        age=2
        print( " Hi I'm " + name + " and I'm " + str(age))
who_am_i()
def nl():
        print('\n')
print( "ho")
nl()
#Adding Parameters
def pup(num):
        print(num + 645)
pup(90)
#Multiple Parameters
def mut(l,r):
        print(l*r)
mut(9,8)
#Adding
def add(u,i):
        print(u+i)
add(9,89)
#Subtraction
def sub(u,s):
        print(u-s)
sub(7,9)
#Sqaure Root
def squ_rot(x):
        print(x**.5)
squ_rot(89)
