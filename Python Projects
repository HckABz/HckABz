#!/bin/bash
#Boolean Expression(True and False)
print("Boolean Expressions")
bool1=False
bool2=3*3==9
bool3=8<10

print(bool1,bool2,bool3)
print(type(9))
#Relation and Boolean Operators
gt=9>8
lt=8<9
print(9<8) and (8<9)
print(20>9) or (8>2)

