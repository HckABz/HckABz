#!/bin/bash

#Variables and Methods 

quote="War is Peacful"

print(quote)

print(quote.upper()) #makes the quote uppercase
print(quote.lower()) #makes the quote lowercase
print(quote.title()) #upprecases the first letter of each word
print(len(quote)) #prints the amount of letters in the quote

name="Alex"
age=30
